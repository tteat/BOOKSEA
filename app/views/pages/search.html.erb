
<div class="header header-1">
  <div class="container">
    <h1>探索书籍</h1>
    <% if @tags.present? %>
      <p class="text-uppercase m-0">
        标签: <%= @tags.map { |tag| tag.label_male }.join ', ' %>
      </p>
    <% end %>
    <p class="text-uppercase m-0">
<!--      类别: <%#= @category.name  %>-->
    </p>
  </div>
</div>

<div class="container mt-5">

  <div class="row">
    <% if @results.limit(50).each do |book| %>
      <div class="col-md-3 mb-4">
        <%= link_to book, class: 'link-clean' do %>
          <div class="card">
            <%= image_tag book.avatar.url(:thumb), class: 'img-fluid' %>
            <div class="card-body">
              <h4 class="m-0 tag-text"><%= book.first_name %></h4>
              <% book.tags_sorted[0...3].each do |tag| %>
                <span class="badge badge-info"><%= tag.first.label book %></span>
              <% end %>
              <p class="m-0 tag-text"><%= truncate(book.description, length: 30) %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end.empty? %>
      <div class="container-fluid">
        <h3>没有结果...</h3>
      </div>
    <% end %>
  </div>
</div>
