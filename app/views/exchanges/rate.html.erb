
<div class="header header-4">
  <div class="container">
    <h1>评价书籍</h1>
  </div>
</div>

<div class="container mt-5">
  <%= render partial: "shared/flash", flash: flash %>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= errors_for @exchange %>

      <div class="text-center">
        <h3>《<%= @book.first_name %>》是一本什么样的书呢 ?</h3>
      </div>

      <%= form_tag(exchanges_post_rate_path) do %>
        <%= hidden_field(nil, :id, :value => @exchange.id) %>

        <div class="comment-wrap" style="width: 600px;display: none">
          <div class="comment-block" style="border-color: black">
            <form action="">
              <textarea name="" id="" cols="30" rows="3" placeholder="发表评论..."></textarea>
            </form>
          </div>
        </div>
        <%= form_for([@book, @book.comments.build]) do |f| %>
          <div class="comment-wrap">
            <div class="photo">
              <div class="avatar" style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/jsa/128.jpg')"></div>
            </div>
            <div class="comment-block">

              <%= f.text_area :content %>

            </div>

            <div style="text-align: right;margin-top: 12px">
              <%= f.submit "评论", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>

        <div class="text-center" style="display: none">
          <%= submit_tag "提交", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
